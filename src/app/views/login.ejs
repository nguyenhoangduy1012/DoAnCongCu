<!doctype html>
<html lang="en">

<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="public/css/style.css">
</head>

<body class="img js-fullheight" style="background-image: url(public/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        <form id="login_form" class="signin-form">
                            <div class="form-group">
                                <input type="text" id="email" class="form-control" placeholder="email" required
                                    value="qhao74154@gmail.com">
                            </div>
                            <div class="form-group">
                                <input value="qhao74154@gmail.com" id="password" type="password" class="form-control"
                                    placeholder="Password" required>
                                <span toggle="#password-field"
                                    class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <a href="/signup">Or Sign Up</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>

                        </form>
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span>
                                Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span>
                                Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const productForm = document.getElementById('login_form');
        productForm.addEventListener('submit', (event) => {
            event.preventDefault();
            const password = document.getElementById('password').value;
            const email = document.getElementById('email').value;
            const _user = {
                password,
                email,
            };
            const tokenjwt = localStorage.getItem("tokenjwt");
            let token = tokenjwt ? "Bearer " + tokenjwt : "";
            console.log("token== " + token)
            fetch('/adminsignIn', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': token
                },
                body: JSON.stringify(_user)
            })
                .then(response =>
                    response.json()
                ).then(response => {
                    if (response.message) {
                        localStorage.setItem("tokenjwt", response.message)
                        window.location.href = '/';
                    }
                }
                )
            // .then(response => {
            //     const data = JSON.parse(response);
            //     // const myLabel = document.querySelector('#notification');
            //     // myLabel.innerHTML = data.mess;
            //     // window.location.href = '/admin'; // replace with your desired URL
            // })
        });                                
    </script>

    


    <script src="public/js/jquery.min.js"></script>
    <script src="public/js/popper.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
    <script src="public/js/main.js"></script>
