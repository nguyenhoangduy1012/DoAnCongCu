<script>
    function myFunction1() {
        let temp = "";
        fetch("/getLisCategory")
            .then(response => response.json())
            .then(data => {
                if (data.message.length > 0) {
                    data.message.forEach((itemData) => {
                        temp += ` <a href="/shop/${itemData._id}" class="nav-item nav-link">${itemData.name}</a>`
                    });
                }
            }).then(() => document.getElementById('showCategory').innerHTML = temp)
            .catch(error => console.log(error));
    }
    myFunction1()
</script>