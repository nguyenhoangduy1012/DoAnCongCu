        <script>
            function myFunction() {
                let token, temp = "";
                let tokenjwt = localStorage.getItem("tokenjwt");
                if (tokenjwt)
                    token = `Bearer ${tokenjwt}`
                else
                    token = "";
                // console.log(token)
                fetch('/getCartItems', {
                    headers: {
                        'Authorization': token// 
                    }
                })
                    .then(response => {
                        if (response.status == 400)
                            window.location.href = '/signin';
                        else
                            return response.json()
                    })
                    .then(data => {
                        if (data.cartItems.length > 0) {
                            document.getElementById('totalPrice').innerHTML = data.totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND', minimumFractionDigits: 0 });
                            data.cartItems.forEach((itemData, index) => {
                                console.log(itemData);
                                temp += `<tr>
                        <td class="align-middle"><img src="${itemData.img}" alt="" style="width: 50px;">
                            <input type="hidden" class="form-control idProduct" value="${itemData._id}">
                          </td>
                        <td class="align-middle "><p class="priceProduct">${itemData.price}</p></td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="number" class="form-control form-control-sm bg-secondary text-center qtyProduct"
                                    value="${itemData.qty}">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle"><button class="btn btn-sm btn-primary"><i
                                    class="fa fa-times"></i></button></td>
                    </tr>`
                            });
                        }
                    }).then(() => {
                        document.getElementById('body_table').innerHTML = temp;
                    })
                    .catch(error => console.log(error));
            }
            myFunction()
            function addOrder() {
                let idProduct = document.getElementsByClassName('idProduct');
                let qtyProduct = document.getElementsByClassName('qtyProduct');
                let priceProduct = document.getElementsByClassName('priceProduct');
                let totalPrice = 0;
                // let totalAmount = totalPrice.substring(0, totalPrice.length - 2);
                let values = [];

                // console.log(totalAmount)
                for (let i = 0; i < idProduct.length; i++) {
                    values.push({
                        productId: idProduct[i].value,
                        purchasedQty: qtyProduct[i].value
                    });
                    totalPrice += parseInt(qtyProduct[i].value) * parseInt(priceProduct[i].innerHTML)
                }
                console.log(totalPrice)

                let token = "";
                let tokenjwt = localStorage.getItem("tokenjwt");
                if (tokenjwt)
                    token = `Bearer ${tokenjwt}`
                else
                    token = "";
                fetch('/addOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': token
                    },
                    body: JSON.stringify({ items: values, totalAmount: totalPrice })
                })
                    .then(response =>
                        response.json()
                    ).then(response => {
                        alert("Mua hàng thành công")
                        window.location.href = '/';
                    })
            }
        </script>

